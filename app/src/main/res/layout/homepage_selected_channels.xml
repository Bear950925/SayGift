<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">


            <TextView
                android:id="@+id/homepage_selected_channels_columns_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/homepage_selected_channels_category"
                android:layout_marginLeft="10dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:text="category"
                android:textColor="#FF0000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/homepage_selected_channels_columns_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="columns title"
                android:textSize="14sp" />



            <ImageView
                android:id="@+id/homepage_selected_channels_author_avatar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:background="@drawable/shape_oval" />

            <TextView
                android:id="@+id/homepage_selected_channels_author_nickname"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nickname"
                android:textSize="14sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/homepage_selected_channels_img"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/homepage_selected_channels_title"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="title"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/homepage_selected_channels_like_counts_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@mipmap/ic_action_compact_favourite_normal" />

        <TextView
            android:id="@+id/homepage_selected_channels_like_counts_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="like_counts"
            android:textSize="15sp" />


    </LinearLayout>

</LinearLayout>
